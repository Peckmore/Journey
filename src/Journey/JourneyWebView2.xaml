<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             x:Class="Journey.JourneyView"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid>

        <Grid x:Name="WebViewGrid"
              Background="White">

            <!-- WebView -->
            <!-- This is the browser used for navigation. -->
            <wpf:WebView2 x:Name="WebView"
                          x:FieldModifier="public"
                          DockPanel.Dock="Bottom"
                          Margin="0" />

        </Grid>

        <!-- Journey Canvas -->
        <!-- This is where "Journey Steps" are presented -->
        <Canvas x:Name="JourneyCanvas"
                Background="Transparent"
                ClipToBounds="True"
                MouseMove="JourneyCanvas_MouseMove"
                PreviewMouseDown="JourneyCanvas_PreviewMouseDown"
                PreviewMouseUp="JourneyCanvas_PreviewMouseUp"
                PreviewMouseWheel="JourneyCanvas_PreviewMouseWheel">

            <Canvas.LayoutTransform>
                <ScaleTransform ScaleX="{Binding ZoomLevel}"
                                ScaleY="{Binding ZoomLevel}" />
            </Canvas.LayoutTransform>

        </Canvas>

    </Grid>

</UserControl>