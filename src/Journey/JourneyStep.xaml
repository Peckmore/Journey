<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:journey="clr-namespace:Journey"
             xmlns:themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.AeroLite"
             x:Class="Journey.JourneyStep"
             x:ClassModifier="internal"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.DataContext>
        <journey:JourneyEntry/>
    </UserControl.DataContext>

    <themes:SystemDropShadowChrome CornerRadius="8">
        <Grid Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Use a VisualBrush as a mask to clip the border rounded corners -->
            <Grid.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=BorderMask}"/>
            </Grid.OpacityMask>

            <!-- The border used as a mask to clip rounded corners -->
            <Border Name="BorderMask"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Background="White"
                    CornerRadius="8"/>

            <!-- Snapshot Area -->
            <Image x:Name="SnapshotImage"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Source="{Binding Snapshot}"
                        Stretch="UniformToFill"/>

            <!-- Text Area -->
            <Border Grid.Row="1"
                        x:Name="TextArea"
                        x:FieldModifier="public"
                        Background="White"
                        BorderThickness="0,1,0,0"
                        BorderBrush="DarkGray"
                        Opacity="0.9">

                <Viewbox Stretch="UniformToFill"
                                HorizontalAlignment="Left">

                    <Grid Margin="5">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Entry Page Title -->
                        <TextBlock Grid.Row="0"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap"
                                        Background="White"
                                        Foreground="DimGray"
                                        FontWeight="Bold"
                                        FontSize="14"
                                        Padding="5"
                                        FontFamily="Arial"
                                        FontStretch="Normal"
                                        Width="384"
                                        MaxHeight="40"
                                        VerticalAlignment="Center"/>

                        <!-- Entry Page URL -->
                        <TextBlock Grid.Row="2"
                                        Text="{Binding Url}"
                                        TextWrapping="NoWrap"
                                        Background="White"
                                        Foreground="Gray"
                                        FontSize="12"
                                        Padding="5"
                                        FontFamily="Arial"
                                        FontStretch="Normal"
                                        Width="384"
                                        Height="25"/>

                    </Grid>

                </Viewbox>

            </Border>

            <Grid x:Name="HoverGrid"
                  Grid.Row="0"
                  Grid.RowSpan="2"
                  Background="DodgerBlue"
                  Opacity="0.5">

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}" Value="True"/>
                                    <Condition Binding="{Binding IsAnimating}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

            </Grid>

        </Grid>
    </themes:SystemDropShadowChrome>

</UserControl>